---
const { title, icon, date, balance } = Astro.props;
---

<div class="bg-gray-800 rounded-lg p-4 flex justify-between items-center w-full max-w-3xl mx-auto mb-4">
  <div class="flex items-center space-x-3">
    <h2 class="text-lg font-semibold">{title}</h2>
    <img src={icon} alt={title} class="w-10 h-10 object-cover"/>
  </div>
  <div class="flex items-center space-x-2">
    <button class="w-6 h-6 bg-gray-700 rounded-full flex items-center justify-center hover:bg-gray-600 transition-colors text-xs">
      +
    </button>
    <button class="w-6 h-6 bg-gray-700 rounded-full flex items-center justify-center hover:bg-gray-600 transition-colors text-xs">
      👁️
    </button>
    <button class="w-6 h-6 bg-gray-700 rounded-full flex items-center justify-center hover:bg-gray-600 transition-colors text-xs">
      ⬇️
    </button>
  </div>
  <div class="text-right">
    <p class="text-xs text-gray-400">{date}</p>
    <p class="font-bold text-sm">{balance}</p>
  </div>
</div>