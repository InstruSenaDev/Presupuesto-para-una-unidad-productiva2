import ModalAgregar from "../../familiar/modalAgregar.astro";
import Boton from "../../icoReutilizables/boton.astro";
import Input from "../../icoReutilizables/input.astro";
import Boton from "../../icoReutilizables/boton.astro";


const productos = [
  { fecha: '17/05/2024', nombre: 'Smartphone Honor', recibo: '00027-445-2345', precio: '$27.000.00 COP', estado: 'En proceso' },
  { fecha: '17/05/2024', nombre: 'Smartphone Honor', recibo: '00027-445-2345', precio: '$27.000.00 COP', estado: 'En proceso' },
  { fecha: '17/05/2024', nombre: 'Smartphone Honor', recibo: '00027-445-2345', precio: '$27.000.00 COP', estado: 'En proceso' },
  { fecha: '17/05/2024', nombre: 'Smartphone Honor', recibo: '00027-445-2345', precio: '$27.000.00 COP', estado: 'En proceso' },
  { fecha: '17/05/2024', nombre: 'Smartphone Honor', recibo: '00027-445-2345', precio: '$27.000.00 COP', estado: 'En proceso' },
];
---

<div class="bg-white rounded-lg shadow-md p-20 w-full">
  <div class="flex justify-between mb-4">
    <div class="flex">
      <Boton Text="volver  "/>
      <Boton Text="Agregar"/>
    <box-icon name='arrow-back' color='#ffffff' >Volver</box-icon>   
 <box-icon id="OPEN" class="items-center" name='plus-circle' color='#ffffff' >Nuevo </box-icon>
  </div>
    <input type="text" placeholder="Buscar productos" class="border rounded-md px-4 py-2 w-1/3">
  </div>
  
  <table class="w-full">
    <thead>
      <tr class="text-left text-indigo-700">
        <th class="pb-2">Fecha</th>
        <th class="pb-2">Nombre</th>
        <th class="pb-2">Numero de recibo</th>
        <th class="pb-2">Precio</th>
        <th class="pb-2">Estado</th>
        <th class="pb-2">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {productos.map((producto) => (
        <tr class="border-t">
          <td class="py-2">{producto.fecha}</td>
          <td>{producto.nombre}</td>
          <td>{producto.recibo}</td>
          <td class="text-green-600">{producto.precio}</td>
          <td>{producto.estado}</td>
          <td>
            <button><box-icon type='solid' name='plus-circle'></box-icon></button>
            <button class="text-gray-600 mr-2"><box-icon name='edit' ></box-icon></button>
            <button class="text-gray-600"><box-icon name='trash'></box-icon></button>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

<div id="MODAL" class=" fixed top-0 left-0 w-full h-full bg-gray-500 bg-opacity-50 flex justify-center items-center">
  <div class="bg-white p-4 rounded bg-blanquito h-auto w-2/6 flex-col text-center">
    <div>
      <h1>Crear Producto</h1> 
      <Input placeholder="Descripcion" id="textC" name="des" type="text" />
      <h2>Luis</h2>
      <p>Modal content</p>
      <div>
         <button class="flex-row w-48 bg-negro"  type="submit">
        
        <box-icon type='solid' color="#ffffff" name='right-arrow-alt'></box-icon>
      </button>
      </div>
     
     
      <button id="CLOSE" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Cerrar</button>
    </div>
  </div>
</div>


<script src="../../js/modal.js"></script>
<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>