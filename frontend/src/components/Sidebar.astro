<style>
    .sidebar {
      width: 250px;
      background-color: #f5f5f5;
      padding: 20px;
      height: 100vh;
      position: fixed;
    }
    .sidebar-logo {
      display: flex;
      align-items: center;
      margin-bottom: 2rem;
    }
    .sidebar-logo img {
      width: 40px;
      margin-right: 10px;
    }
    .sidebar-logo h1 {
      font-size: 1.5rem;
    }
    .nav {
      list-style: none;
      padding: 0;
    }
    .nav li {
      margin-bottom: 1rem;
    }
    .nav a {
      text-decoration: none;
      color: #333;
      font-size: 1.2rem;
    }
    .nav a:hover {
      text-decoration: underline;
    }
  </style>
  
  <div class="sidebar">
    <div class="sidebar-logo">
      <img src="../../public/img/Logo.png" alt="Logo" />
      <h1>PUP</h1>
    </div>
    <ul class="nav">
      <li><a href="#">Empresas</a></li>
      <li><a href="#">Familias</a></li>
      <li><a href="#">Personal</a></li>
      <li><a href="#">Ajustes</a></li>
