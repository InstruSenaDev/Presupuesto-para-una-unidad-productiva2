---
interface Props {
  // Propiedades de entrada reutilizables
  placeholder: string;
  type: "text" | "email" | "password";
  id: string; // Obligatorio para env√≠o de formularios
}

const { placeholder, type, id } = Astro.props;

---

<div >
  <label for={id}>{}</label>  <input
    type={type}
    placeholder={placeholder}
    
    class="mb-2 appearance-none rounded py-2 px-3 text-color2 leading-tight focus:outline-none focus:shadow-outline w-full justify-center shadow-xl"
    id={id}  />
</div>
