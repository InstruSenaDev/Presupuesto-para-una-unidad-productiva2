<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Sidebar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
      /* Custom Tailwind CSS classes */
      .sidebar-minimized {
        width: 4rem; /* equivalent to w-16 in Tailwind CSS */
      }
      .sidebar-minimized .sidebar-menu li a {
        display: none;
      }
      .sidebar-minimized .sidebar-menu li::before {
        content: attr(data-tooltip);
        color: white;
        display: block;
        text-align: center;
      }
      #sidebar {
        position: fixed;
        z-index: 1000;
      }
      #main-content {
        margin-left: 16rem; /* equivalent to w-64 in Tailwind CSS */
        transition: margin-left 0.3s;
      }
      .sidebar-minimized + #main-content {
        margin-left: 4rem; /* equivalent to w-16 in Tailwind CSS */
      }
    </style>
  </head>

  <div
    id="sidebar"
    class="w-64 h-screen bg-blueUwu text-white transition-all duration-300 f"
  >
    <div class="flex justify-end p-2.5 bg-gray-700">
      <button
        id="toggleBtn"
        class="bg-none border-none text-white text-2xl cursor-pointer">☰</button
      >
    </div>
    <!-- El sidebar -->
    <ul class="sidebar-menu list-none p-0">
    <!-- En data-tooltip se puede cambiar la palabra que se va colocar en el sidebar minimizado -->
      <li class="p-3.5 " data-tooltip="">
        <div class="hover:bg-rosadito w-full flex items-center">
          <a
            href="Inicio"
            class="hover:bg-rosadito w-full font-bold text-2xl text-blanquito no-underline"
            >Inicio</a>
        </div>
      </li>
        <li class="p-3.5" data-tooltip="">
          <div class="hover:bg-rosadito w-full flex items-center">
            <a
              href="#"
              class="hover:bg-rosadito w-full font-bold text-2xl text-blanquito no-underline"
              >Personal</a>
          </div>
        </li>
          <li class="p-3.5" data-tooltip="">
            <div class="hover:bg-rosadito w-full flex items-center">
              <a
                href="#"
                class="hover:bg-rosadito w-full font-bold text-2xl text-blanquito no-underline"
                >Familiar</a>
            </div>
          </li>
            <li class="p-3.5" data-tooltip="">
              <div class="hover:bg-rosadito w-full flex items-center">
                <a
                  href="#"
                  class="hover:bg-rosadito w-full font-bold text-2xl text-blanquito no-underline"
                  >Empresarial</a>
              </div>
            </li>
              <li class="p-3.5 flex " data-tooltip="">
                <div class="hover:bg-rosadito w-full flex items-center">
                  <a
                    href="#"
                    class="hover:bg-rosadito w-full font-bold text-2xl text-blanquito no-underline"
                    >Salir</a>
                </div>
              </li>
            <!-- <div id="main-content" class="p-4"> -->
            <!-- Aquí va el contenido principal -->
            <!-- <h1>Contenido Principal</h1>
        <p>Este es el contenido principal que se verá a la derecha del sidebar.</p>
    </div> -->

            <script>
              const toggleBtn = document.getElementById("toggleBtn");
              const sidebar = document.getElementById("sidebar");
              const mainContent = document.getElementById("main-content");
              toggleBtn.addEventListener("click", () => {
                sidebar.classList.toggle("sidebar-minimized");
                mainContent.classList.toggle("sidebar-minimized");
              });
            </script>
          </li>
        </li>
      </li>
    </ul>
  </div>
</html>
