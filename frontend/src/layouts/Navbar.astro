---
interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<header class="text-3xl font-bold pl-4 bg-blueUwu items-center">
  <div class="flex justify-between">
    <!-- div de relleno para poder ajustar el titulo, nombre e icono -->
    <div></div>
    <div></div>
    <div>
      <h1 class="text-blanquito text-center p-7">{titulo}</h1>
    </div>
    <div class="flex items-center">
      <h2 class="text-blanquito" id="Nombre"></h2>
      <i id="OPEN-" class="bi bi-arrow-down-square-fill text-blanquito"></i>
    </div>
  </div>
</header>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>

<div
  id="MODAL-"
  class="fixed inset-0 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50 flex items-center justify-center"
>
  <div
    class="relative p-5 border bg-blanquito w-96 shadow-lg rounded-md bg-white"
  >
    <div class="flex justify-between bg-blueUwu h-1/4 rounded">
      <h2 class="text-blanquito">Datos usuario</h2>
      <div
        class="rounded-circle bg-dark d-flex justify-content-center align-items-center"
        style="border-radius: 50%;"
      >
        <box-icon  id="CLOSE-" name="x-circle" color="#ffffff"></box-icon>
      </div>
    </div>

    <div class="mt-3 text-center">
      <div class="mt-2 px-7 py-3">
        <div class="mb-4 list-none flex-col shadow-griscard">
          <li id="nombre">nombre</li>
          <li id="correo">correo</li>
          <li id="tipoDc">tipo de documento de identifiacion</li>
          <li id="numeroDc">numero documento</li>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<script src="../js/modalPerfil.js"></script>
